{
  "manifest_version": 3,
  "name": "PrayerTime",
  "description": "Accurate global prayer times with advanced calculation precision and a new personalized theme creator.",
  "version": "4.0.0",
  "action": {
    "default_popup": "index.html",
    "default_icon": "logo512.png"
  },
  "host_permissions": [
    "https://api.locationiq.com/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' https://api.locationiq.com"
  }
}